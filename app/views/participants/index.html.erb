<html>
  <head>
    <meta charset="utf-8">
    <!-- Material Design Lite -->
    <script src="/material.min.js"></script>
    <link rel="stylesheet" href="/material.min.css">
    <!-- Material Design icon font -->
    <!-- <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons"> -->
  </head>
  <body>

  <style>
  body {
    background: #fafafa;
  }
  table{
    width: 80%;
    margin: 0 auto;
  }
  </style>

    <p>Participants#index</p>
    <p>Find me in app/views/participants/index.html.erb</p>
    <h1 style="text-align: center;">参加者一覧</h1>

    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
      <thead>
        <tr>
          <th>id</th>
          <th class="mdl-data-table__cell--non-numeric">tag</th>
          <th>何週目</th>
          <th>チェックポイント 1</th>
          <th>チェックポイント 2</th>
          <th>チェックポイント 3</th>
          <th>チェックポイント 4</th>
          <th>チェックポイント 5</th>
          <th>チェックポイント 1-2</th>
          <th>チェックポイント 2-2</th>
          <th>チェックポイント 3-2</th>
          <th>チェックポイント 4-2</th>
          <th>チェックポイント 5-2</th>
          <th>チェックポイント 1-3</th>
          <th>チェックポイント 2-3</th>
          <th>チェックポイント 3-3</th>
          <th>チェックポイント 4-3</th>
          <th>チェックポイント 5-3</th>
        </tr>
      </thead>
      <tbody>
        <% @participants.each do |participant| %>
        <tr>
          <td><%= participant.id %></td>
          <td class="mdl-data-table__cell--non-numeric"><%= participant.tag %></td>
          <td><%= participant.count %></td>
          <td><%= participant.cp_one %></td>
          <td><%= participant.cp_two %></td>
          <td><%= participant.cp_three %></td>
          <td><%= participant.cp_four %></td>
          <td><%= participant.cp_five %></td>

          <td><%= participant.cp_one_second %></td>
          <td><%= participant.cp_two_second %></td>
          <td><%= participant.cp_three_second %></td>
          <td><%= participant.cp_four_second %></td>
          <td><%= participant.cp_five_second %></td>

          <td><%= participant.cp_one_third %></td>
          <td><%= participant.cp_two_third %></td>
          <td><%= participant.cp_three_third %></td>
          <td><%= participant.cp_four_third %></td>
          <td><%= participant.cp_five_third %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </body>
</html>
